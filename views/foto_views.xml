<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <!-- gkr.foto form view -->
    <record id="gkr_foto_view_form" model="ir.ui.view">
        <field name="name">Tambah Foto Lainnya...</field>
        <field name="model">gkr.foto</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="foto" widget='image'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="gkr_foto_action" model="ir.actions.act_window">
        <field name="name">Foto Lainnya</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gkr.gereja</field>
        <field name="view_mode">form</field>        
    </record>

    </data>
</odoo>
